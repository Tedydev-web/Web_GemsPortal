                                                        <td>Le Nhat Nam</td>
                                                        <td><span class="badge badge-success">Mặc định</span> 32 to 9, Phường An Bình, Thành phố Biên Hòa, Đồng Nai</td>
                                                        <td>0945524725</td>
                                                        <td><span class="badge badge-danger">Văn phòng</span></td>
                                                        <td>
                                                            <a href="javascript:void(0)" onclick="ShowEditModal(this,'111')">
                                                                <i class="fa fa-pencil-square-o text-success m-1" aria-hidden="true"></i>
                                                            </a>
                                                            <a href="javascript:void(0)" onclick="Delete(this,'111')">
                                                                <i class="fa fa-trash-o text-danger m-1" aria-hidden="true"></i>
                                                            </a>
                                                        </td>
                                                    </tr>*@
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="mt-4" id="div_view_panel" style="display:none;">

                </div>
            </div>
        </div>
    </div>
</section>
<!-- content section end-->
