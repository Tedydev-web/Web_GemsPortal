@{
    Layout = "~/Views/Shared/_LayoutMember.cshtml";
}
@section MetaHead{
    <meta name="robots" content="noindex, nofollow">
}
@section Styles{
    <link href="~/lib/parsleyjs/parsley.css" rel="stylesheet" />
    <link href="~/lib/ladda/ladda-themeless.min.css" rel="stylesheet" type="text/css" />
    <link href="~/lib/sweetalert2/sweetalert2.min.css" rel="stylesheet" />
    <link href="~/lib/pretty-checkbox/pretty-checkbox.min.css" rel="stylesheet" />
    <link href="~/lib/bootstrap-select-fix/bootstrap-select.min.css" rel="stylesheet" />
    <link href="~/css/loading_small.css" rel="stylesheet" />
    <link href="~/css/checkbox_custom_1.css" rel="stylesheet" />
}
@section Scripts{
    <script src="~/lib/ladda/spin.min.js"></script>
    <script src="~/lib/ladda/ladda.min.js"></script>
    <script src="~/lib/parsleyjs/parsley.min.js"></script>
    <script src="~/lib/parsleyjs/i18n/vn.js"></script>
    <script src="~/lib/sweetalert2/sweetalert2.min.js"></script>
    <script src="~/lib/bootstrap-select-fix/bootstrap-select.min.js"></script>
    <script src="~/lib/bootstrap-select-fix/i18n/defaults-vi_VN.min.js"></script>
    <script src="~/lib/bootstrap-maxlength/bootstrap-maxlength.min.js"></script>
    <script src="~/controllers/address.js" asp-append-version="true"></script>
}
<!-- content section start-->
<section class="dashboard-section section-b-space bg_custom_1" style="padding-top:0px;">
    <div class="container">
        <div class="row">
            <div class="col-lg-3">
                @await Html.PartialAsync("_P_MenuAccount", 3)
            </div>
            <div class="col-lg-9 bg-white">
                <div class="faq-content tab-content" id="div_main_table">
                    <div class="tab-pane fade show active">
                        <div class="row">
                            <div class="col-12">
                                <div class="card dashboard-table mt-2 bg-white">
                                    <div class="card-body table-responsive-md">
                                        <div class="top-sec">
                                            <h3 class="text-uppercase">Sổ địa chỉ</h3>
                                            <button type="button" class="btn btn-sm btn-solid ladda-button" dir="ltr" data-style="zoom-in" onclick="ShowAddModal(this)" style="padding: 10px 14px;">
                                                <i class="fa fa-plus d-block d-md-none"></i>
                                                <span class="d-none d-md-block"><i class="fa fa-plus"></i> Thêm địa chỉ mới</span>
                                            </button>
                                        </div>
                                        <table class="table mb-0">
                                            <thead>
                                                <tr>
                                                    <th scope="col">Tên</th>
                                                    <th scope="col">Địa chỉ</th>
                                                    <th scope="col">Điện thoại</th>
                                                    <th scope="col">Vị trí</th>
                                                    <th scope="col"> </th>
                                                </tr>
                                            </thead>
                                            <tbody id="tbody_main_table">
