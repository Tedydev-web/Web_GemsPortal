@{
    int categoryId = Convert.ToInt32(ViewBag.categoryId);
    string categoryTitle = ViewBag.categoryTitle;
    Layout = "~/Views/Shared/_LayoutMaster.cshtml";
    var breadCrumb = new Web_GemsPortal.ViewModels.VM_BreadCrumb
    {
        currentName = string.IsNullOrEmpty(categoryTitle) ? "Đào tạo" : categoryTitle,
        lv1Name = !string.IsNullOrEmpty(categoryTitle) ? "Đào tạo" : categoryTitle,
        lv1Url = string.IsNullOrEmpty(categoryTitle) ? "" : "/tin-tuc",
    };
}
@section MetaHead{
    <meta name="robots" content="noodp,noydir,index,follow" />
}
@section Scripts{
    <script src="~/controllers/training.js" asp-append-version="true"></script>
}

<input type="hidden" id="input_keyword" value="@ViewBag.keyword" />
