@model Web_GemsPortal.EditModels.Account.EM_Person
@{
    Layout = "~/Views/Shared/_LayoutMember.cshtml";
}
@section MetaHead{
    <meta name="robots" content="noindex, nofollow">
}
@section Styles{
    <link href="~/lib/parsleyjs/parsley.css" rel="stylesheet" />
    <link href="~/css/loading_small.css" rel="stylesheet" />
    <link href="~/lib/ladda/ladda-themeless.min.css" rel="stylesheet" type="text/css" />
    <link href="~/lib/sweetalert2/sweetalert2.min.css" rel="stylesheet" />
    <link href="~/lib/dropzone/min/dropzone.min.css" rel="stylesheet" type="text/css" />
    <link href="~/lib/dropify/css/dropify.min.css" rel="stylesheet" type="text/css" />
    <link href="~/lib/magnific-popup/magnific-popup.css" rel="stylesheet" type="text/css" />
    <link href="~/lib/datetimepicker/css/jquery.datetimepicker.min.css" rel="stylesheet" />
    <link href="~/assets/css/style_v2.css" rel="stylesheet"  asp-append-version="true"/>
    <link href="~/assets/responsive_dev/responsive_v2.css" rel="stylesheet"  asp-append-version="true"/>
}
@section Scripts{
    <script src="~/lib/ladda/spin.min.js"></script>
    <script src="~/lib/ladda/ladda.min.js"></script>
    <script src="~/lib/parsleyjs/parsley.min.js"></script>
    <script src="~/lib/parsleyjs/i18n/vn.js"></script>
    <script src="~/lib/sweetalert2/sweetalert2.min.js"></script>
    <script src="~/lib/dropzone/min/dropzone.min.js"></script>
    <script src="~/lib/dropify/js/dropify.min.js"></script>
    <script src="~/lib/magnific-popup/jquery.magnific-popup.min.js"></script>
    <script src="~/lib/datetimepicker/js/jquery.datetimepicker.full.min.js"></script>
    <script src="~/controllers/account_profile.js" asp-append-version="true"></script>
}
<!-- content section start-->
<section class="dashboard-section section-b-space bg_custom_1 dashboard_section_profile" style="padding-top:0px;">
    <div class="container">
        <div class="row">
            <div class="col-lg-3">
                @await Html.PartialAsync("_P_MenuAccount", 1)
            </div>
            <div class="col-lg-9 bg-white py-4" id="div_profile_form">
                <div class="theme-card mt-4">
                    <form action="/Account/EditProfile" method="post" class="theme-form" data-parsley-validate id="form_data">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="imageId" />
                        <input type="hidden" asp-for="imageSerialId" />
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="row">
                            <div class="col-xl-3 col-lg-4 col-md-12">

                                <div class="font-weight-bold text-uppercase text-center bg-light p-1 row bg-white mx-0 mb-1 border rounded">
                                    <span class="pt-1 pb-1"><i class="fa fa-user-circle-o" aria-hidden="true"></i> Ảnh đại diện</span>
                                </div>
                                <div>

                                    <!--Image upload-->
                                    <div class="col-12 col-sm-12 col-md-12" style="display:none;" id="div_upload_image">
                                        <div class="col-12 filter-item">
                                            <div class="gal-box mb-0">
                                                <input type="file" asp-for="imageFile" data-plugins="dropify" accept="image/jpeg, image/png" data-allowed-file-extensions="png jpg jpeg" data-height="150" data-max-file-size="5M" />
                                            </div>
                                        </div>
                                        <div class="col-12 text-center">
                                            <a href="javascript:void(0)" class="text-info" onclick="ShowHidePanel('#div_view_image','#div_upload_image')">
                                                <i class="fa fa-arrow-left"></i> Quay lại
                                            </a>
                                        </div>
                                    </div>

                                    <!--Image view-->
                                    <div class="col-12 col-sm-12 col-md-12" id="div_view_image">
                                        <div class="col-12 filter-item text-center">
                                            <div class="gal-box mb-0">
                                                <a href="@Model.imageUrl" class="image-popup">
                                                    @if (string.IsNullOrEmpty(Model.imageUrl))
                                                    {
                                                        <img src="/assets/images/error/avatar.png" class="img-fluid" id="img_avatar_image" alt="Ảnh đại diện" onerror="this.onerror=null;this.src='/assets/images/error/avatar.png';" />
                                                    }
                                                    else
                                                    {
                                                        <img src="@Model.imageUrl" class="img-fluid" alt="Ảnh đại diện" id="img_avatar_image" onerror="this.onerror=null;this.src='/assets/images/error/avatar.png';" />
                                                    }
                                                </a>
                                            </div>
                                        </div>
                                        <div class="col-12 text-center">
                                            <a href="javascript:void(0)" style="color: lightseagreen;margin-right:10px;" onclick="ShowHidePanel('#div_upload_image','#div_view_image')">
                                                <i class="fa fa-pencil"></i> Thay đổi
                                            </a>
                                            <a href="javascript:void(0)" class="text-danger" onclick="RemoveAvatar()">
                                                <i class="fa fa-trash"></i> Xóa
                                            </a>
                                        </div>
                                    </div>
                                </div>

                            </div>

                            <div class="col-xl-9 col-lg-8 col-md-12">
                                <div class="form-row row">
                                    <div class="col-md-6 mb-3">
                                        <label asp-for="lastName">Họ: <span class="text-danger">(*)</span></label>
                                        <input asp-for="lastName" class="form-control" placeholder="Nhập họ" maxlength="30" required />
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label asp-for="firstName">Tên: <span class="text-danger">(*)</span></label>
                                        <input asp-for="firstName" class="form-control" placeholder="Nhập tên" maxlength="30" required />
                                    </div>
                                </div>
                                <div class="form-row row">
                                    <div class="col-md-6 mb-3">
                                        <label asp-for="email">Email: </label>
                                        <input asp-for="email" class="form-control" placeholder="Nhập email" maxlength="50" pattern=@(@"^[a-zA-Z0-9.!#$%&’*+/=?^_`{|}~-]+@[a-zA-Z0-9-]+(?:\.[a-zA-Z0-9-]+)*$") />
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label asp-for="birthday">Ngày sinh: </label>
                                        <input type="text" asp-for="birthday" class="form-control" value="@Model.birthday?.ToString("dd-MM-yyyy")" />
                                    </div>
                                </div>
                                <div class="form-row row checkout-page">
                                    <div class="col-md-6 mb-3 checkout-form">
                                        <label asp-for="gender">Giới tính: </label>
                                        <select asp-for="gender" class="bg-white">
                                            <option value="0">Nam</option>
                                            <option value="1">Nữ</option>
                                        </select>
                                    </div>
                                </div>
                            </div>

                            <div class="col-12 mt-2">
                                <button type="button" class="btn btn-danger btn_change_pass" onclick="ShowChangePassModal(this)">
                                    <i class="fa fa-key" aria-hidden="true"></i> ĐỔI MẬT KHẨU
                                </button>
                                <button type="submit" class="btn btn-xs btn-solid w-auto float-right ladda-button btn_change_pass_update" dir="ltr"
                                        data-style="expand-left" id="btn_submit_form">
                                    <i class="fa fa-floppy-o"></i> CẬP NHẬT
                                </button>
                            </div>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- content section end-->
<!-- Modal change pw start -->
<div class="modal fade" id="modal_change_pw" tabindex="-1" role="dialog" aria-labelledby="modal_change_pw" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document" style="padding:50px 0;">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">
                    <b class="text-uppercase">Đổi mật khẩu</b>
                </h4>
                <button type="button" class="btn-close" data-bs-dismiss="modal" style="font-size:1.5rem;font-weight:700;line-height:1;"
                        aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body register-page pt-0" id="div_body_modal_change_pw">

            </div>
        </div>
    </div>
</div>
<!-- Modal change pw end -->