@model Web_GemsPortal.EditModels.Account.EM_ChangePassword

<form action="/Account/ChangePassword" method="post" class="theme-form" id="form-dataChangePassword">
    @Html.AntiForgeryToken()
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="row">
        <div class="col-md-12">
            <div class="form-group">
                <label class="font-weight-bold" for="password">Mật khẩu cũ: <span class="text-danger">(*)</span></label>
                <div class="input-group input-group-merge">
                    <input type="password" class="form-control" id="password" asp-for="password" placeholder="Nhập mật khẩu cũ" name="Password" maxlength="50" />
                    <span class="input-group-btn border">
                        <button class="btn btn-light reveal" data-forcus="#password" type="button" onclick="ShowPassword(this)"><i class="fa fa-eye-slash"></i></button>
                    </span>
                    <div class="invalid-feedback"></div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="form-group">
                <label class="font-weight-bold" for="newpassword">Mật khẩu mới: <span class="text-danger">(*)</span></label>
                <div class="input-group input-group-merge">
                    <input type="password" class="form-control" id="newpassword" asp-for="newPassword" placeholder="Nhập mật khẩu mới" name="NewPassword" maxlength="50" />
                    <span class="input-group-btn border">
                        <button class="btn btn-light reveal" data-forcus="#newpassword" type="button" onclick="ShowPassword(this)"><i class="fa fa-eye-slash"></i></button>
                    </span>
                    <div class="invalid-feedback"></div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="form-group">
                <label class="font-weight-bold" for="confirmpassword">Nhập lại mật khẩu: <span class="text-danger">(*)</span></label>
                <div class="input-group input-group-merge">
                    <input type="password" class="form-control" id="confirmpassword" placeholder="Nhập lại mật khẩu mới" name="ConfirmPassword" maxlength="50" />
                    <span class="input-group-btn border">
                        <button class="btn btn-light reveal" data-forcus="#confirmpassword" type="button" onclick="ShowPassword(this)"><i class="fa fa-eye-slash"></i></button>
                    </span>
                    <div class="invalid-feedback"></div>
                </div>
            </div>
        </div>
    </div>

    <div class="text-right">
        <button type="button" class="btn btn-sm btn-outline w-auto"
                onclick="$('#changePwModal').modal('hide');">
            <i class="fa fa-times"></i> Hủy
        </button>
        <button type="submit" class="btn btn-sm btn-solid w-auto ladda-button" dir="ltr"
                data-style="expand-right" id="btn-submitFormChangePassword">
            <i class="fa fa-floppy-o"></i> Lưu
        </button>
    </div>
</form>