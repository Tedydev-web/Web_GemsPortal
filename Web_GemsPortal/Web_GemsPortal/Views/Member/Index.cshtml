
@{
    var breadCrumb = new Web_GemsPortal.ViewModels.VM_BreadCrumb
            {
                currentName = "Liên kết bán hàng",
            };
}
@section MetaHead {
    <meta name="robots" content="noodp,noydir,index,follow" />
}
@section Styles {
    <link href="~/lib/simplelightbox-master/dist/simple-lightbox.min.css" rel="stylesheet" />
    <link href="~/lib/ladda/ladda-themeless.min.css" rel="stylesheet" type="text/css" />
    <link href="~/css/member-profile.css" rel="stylesheet" />
}
@section Scripts {
    <script src="~/lib/ladda/spin.min.js"></script>
    <script src="~/lib/ladda/ladda.min.js"></script>
    <script src="~/lib/simplelightbox-master/dist/simple-lightbox.jquery.min.js"></script>
    <script src="~/controllers/member.js" asp-append-version="true"></script>
}

<!-- breadcrumb start -->
<partial name="_P_BreadCrumb" model="breadCrumb" />
<!-- breadcrumb end -->
<section class="authentication-page">
    <div class="container">
        <section class="search-block">
            <div class="container tab-product pt-0">
                <ul class="nav nav-tabs nav-material justify-content-center" id="top-tab" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link p-2 active" data-value="1" id="top-tab1-tab" data-bs-toggle="tab"
                           href="#top-tab1" role="tab" aria-selected="true">
                            <i class="icofont icofont-ui-home"></i>bản tin
                        </a>
                        <div class="material-border"></div>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link p-2" data-value="2" id="top-tab2-tab" data-bs-toggle="tab"
                           href="#top-tab2" role="tab" aria-selected="false">
                            <i class="icofont icofont-man-in-glasses"></i>Thành viên
                        </a>
                        <div class="material-border"></div>
                    </li>
                </ul>
            </div>
        </section>
    </div>
</section>
